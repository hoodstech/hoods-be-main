{
  "name": "hoods-be-main",
  "version": "1.0.0",
  "description": "Backend API with Fastify, PostgreSQL, and Drizzle ORM",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate --config=src/config/drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio --config=src/config/drizzle.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:dev": "node scripts/check-env.js .env.development && docker-compose --env-file .env.development -f docker-compose.development.yml up -d",
    "docker:dev:down": "docker-compose --env-file .env.development -f docker-compose.development.yml down",
    "docker:prod": "node scripts/check-env.js .env.production && docker-compose --env-file .env.production -f docker-compose.production.yml up -d",
    "docker:prod:down": "docker-compose --env-file .env.production -f docker-compose.production.yml down",
    "docker:prod:build": "node scripts/check-env.js .env.production && docker-compose --env-file .env.production -f docker-compose.production.yml up -d --build"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "drizzle",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/oauth2": "^8.1.0",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@sinclair/typebox": "^0.34.41",
    "argon2": "^0.44.0",
    "awilix": "^12.0.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "fastify": "^5.2.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
